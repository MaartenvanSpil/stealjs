    "document": "bit-docs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stealjs/stealjs.git"
  },
  "keywords": [
    "StealJS"
  ],
  "author": "Bitovi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stealjs/stealjs/issues"
  },
  "homepage": "https://github.com/stealjs/stealjs#readme",
  "dependencies": {
    "steal": "^1.0.0-rc.0",
    "steal-tools": "^1.0.0-rc.0"
  },
  "devDependencies": {
    "bit-docs": "0.0.7"
  },
  "bit-docs": {
    "dependencies": {
      "bit-docs-glob-finder": "^0.0.5",
      "bit-docs-dev": "^0.0.3",
      "bit-docs-js": "^0.0.6",
      "bit-docs-tag-sourceref": "^0.0.3",
      "bit-docs-tag-package": "^0.0.3",
      "bit-docs-generate-html": "^0.3.0",

      "bit-docs-prettify": "^0.1.0",
      "bit-docs-html-highlight-line": "^0.2.2",
