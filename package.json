      "bit-docs-tag-demo": "^0.3.0",
      "bit-docs-docjs-theme": "^0.1.0"
    },
    "glob": {
      "pattern": "{node_modules,docs}/{steal,steal-tools}/**/*.{js,md}",
      "ignore": ["node_modules/steal/test/**/*","node_modules/steal-tools/test/**/*"]
    },
    "parent": "StealJS",
